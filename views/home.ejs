    </div>
    <div class="row d-flex justify-content-center mt-5 mb-5">
      <div class="col-11">
        <hr>
      </div>
    </div>

    <!-- products -->
    <div class="container mt-5">
      <div class="d-flex justify-content-between align-items-center mb-3">
        <h3>Featured Products</h3>
        <a href="/products" class="btn btn-primary">View All</a>
      </div>
      <div class="product-row d-flex overflow-auto gap-5">
        <!-- Each product card -->
        <% for(let product of allProducts){ %>
          <a href="/products/<%= product._id%>" class="product-link">
            <div class="card col mb-4" style="width: 18rem;height: 30rem;">
              <img src="<%=product.images%>" class="card-img-top" style="height: 20rem;" alt="">
              <div class="card-body border-top">
                <h5 class="card-title">
                  <%=product.name %>
                </h5>
                <p class="card-text">
                  &#8377;<%= product.price %>
                </p>

              </div>
            </div>
          </a>
          <% } %>
      </div>
    </div>
    <div class="row d-flex justify-content-center mt-5 mb-5">
      <div class="col-11">
        <hr>
      </div>
    </div>
