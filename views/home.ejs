<% layout("/layouts/boilerplate") -%> 

<body>
    <!-- carousel -->
    <div id="carouselExampleIndicators" class="carousel slide" >
        <div class="carousel-indicators">
          <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
          <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" aria-label="Slide 2"></button>
          <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2" aria-label="Slide 3"></button>
        </div>
        <div class="carousel-inner " style="height: 300px;width:auto">
          <div class="carousel-item active">
            <img src="https://images.pexels.com/photos/3009748/pexels-photo-3009748.jpeg" class="d-block w-100" alt="...">
          </div>
          <div class="carousel-item">
            <img src="https://images.pexels.com/photos/3009748/pexels-photo-3009748.jpeg" class="d-block w-100" alt="...">
          </div>
          <div class="carousel-item">
            <img src="https://images.pexels.com/photos/3009748/pexels-photo-3009748.jpeg" class="d-block w-100" alt="...">
          </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Next</span>
        </button>
      </div>

      <!-- browse by category -->
      <div class="mt-3 mb-3">
        <div class="head text-center">
            <h1>Browse By Category</h1>
        </div>
        <div class="row categories">
            <a href="/category/sports-equipment" class="col-2">
                <div class="category-item sports-equipment">
                    <h2>Equipment</h2>
                </div>
            </a>
            <a href="/category/apparel" class="col-2">
                <div class="category-item apparel">
                    <h2>Apparel</h2>
                </div>
            </a>
            <a href="/category/footwear" class="col-2">
                <div class="category-item footwear">
                    <h2>Footwear</h2>
                </div>
            </a>
            <a href="/category/accessories" class="col-2">
                <div class="category-item accessories">
                    <h2>Accessories</h2>
                </div>
            </a>
            
        </div>
    </div>
    
</body>