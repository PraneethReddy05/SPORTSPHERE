<% layout("/layouts/boilerplate") %>
<div class="col-10 offset-1">
    <div class="mt-5 text-center mb-5">
        <h3>Dashboard</h3>
    </div>
    <div class="d-flex mt-5 mb-5 justify-content-between">
        <div class="d-flex gap-1"><a class="nav-link" href="/home">Home</a>/<a class="nav-link" href="/seller/dashboard">Dashboard</a></div>
        <div>Welcome, <b><%= seller.name %></b></div>
    </div>
    <div class="d-flex gap-2 mt-5 mb-5">
        <div class="col-3 d-flex flex-column gap-2">
            <div class="profile-container">
                <b>Total Revenue</b>
                <p class="card-text">&#8377;<%= seller.revenue %></p>
            </div>
            <div class="profile-container d-flex flex-column gap-2">
                <b>Add New Product</b>
                <p><a class="btn" href="/seller/product/new">Add  +</a></p>
            </div>
            <div class="profile-container d-flex flex-column gap-2">
                <b>All products</b>
                <p><a class="btn" href="/seller/products">View All</a></p>
            </div>
        </div>
        <div class="col-9 profile-container">
            <div class="product-row d-flex overflow-auto gap-5">
                <!-- Each product card -->
                <% for(let product of seller.products){ %>
                  <a href="/products/<%= product._id%>" class="product-link">
                    <div class="card col mb-4" style="width: 18rem;height: 30rem;">
                      <img src="<%=product.images%>" class="card-img-top" style="height: 20rem;" alt="">
                      <div class="card-body border-top">
                        <h5 class="card-title">
                          <%=product.name %>
                        </h5>
                        <p class="card-text">
                          &#8377;<%= product.price %>
                        </p>
                      </div>
                    </div>
                  </a>
                <% } %>
            </div>
        </div>
    </div>
</div>
