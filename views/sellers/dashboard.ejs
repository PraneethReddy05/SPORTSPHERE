<div class="row"></div> -->
<div class="mt-5 text-center mb-5">
    <h1>Your Products</h1>
</div>
<div class="row row-cols-lg-4 row-cols-md-3 row-cols-sm-2 ms-3 mb-5 mt-5">
    <% for(let product of seller.products){ %>
            <div class="card col mb-4 p-0" style="width: 18rem;height: 34rem;">
                <a href="/products/<%= product._id%>" class="product-link"></a>
                <img src="<%=product.images%>" class="card-img-top" style="height: 20rem;width: 100%;" alt="">
                <div class="card-body border-top">
                    <h5 class="card-title">
                        <%=product.name %>
                    </h5>
                    <p class="card-text">
                        &#8377;<%= product.price %> <br>
                        Quantity: <%= product.stock %>
                    </p>
                </div>
                <div class="buttons row mb-3">
                    <a href="/products/<%= product._id%>/edit" class="btn col-3 offset-3">Edit</a>
                    <form action="/products/<%= product._id%>?_method=DELETE" method="post" class="col-3">
                    <button class="btn">Delete</button>
                    </form>
                </div>
            </a>
            </div>
        <% } %>
</div>
