<% layout("/layouts/boilerplate") %>
<% if (currUser) { %>
    <h1 class="mt-3 col-4 offset-4">Seller Dashboard Page</h1>
    <h3>Welcome, <%= currUser.username %></h3>
<% } else { %>
    <h1 class="mt-5">Seller Dashboard Page</h1>
    <h3>You are not logged in.</h3>
    <p>Debug info: <%= JSON.stringify(currUser) %></p>
<% } %>
<!-- <%= currUser %>
<%= seller %>
<div class="row"></div> -->
<div class="mt-5 text-center mb-5">
    <h1>Your Products</h1>
</div>
<div class="row row-cols-lg-4 row-cols-md-3 row-cols-sm-2 ms-3 mb-5 mt-5">
    <% for(let product of seller.products){ %>
        <a href="/products/<%= product._id%>" class="product-link">
            <div class="card col mb-4" style="width: 18rem;height: 30rem;">
                <img src="<%=product.images%>" class="card-img-top" style="height: 20rem;" alt="">
                <div class="card-body border-top">
                    <h5 class="card-title">
                        <%=product.name %>
                    </h5>
                    <p class="card-text">
                        &#8377;<%= product.price %>
                    </p>

                </div>
            </div>
        </a>
        <% } %>
</div>
